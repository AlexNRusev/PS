        <GroupBox x:Name="groupBox_UserData" Header="Вход в системата" Margin="10">
            <StackPanel x:Name="stackPanel_UserData" Orientation="Vertical" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">

                <WrapPanel Margin="5">
                    <Label x:Name="label_Username" Content="Потребителско име:" MinWidth="130" HorizontalContentAlignment="Right"/>
                    <TextBox x:Name="textBox_Username" Text="" Height="18" TextWrapping="Wrap" MinWidth="150" />
                </WrapPanel>

                <WrapPanel Margin="5">
                    <Label x:Name="label_Password" Content="Парола:" MinWidth="130" HorizontalContentAlignment="Right"/>
                    <PasswordBox x:Name="passwordBox"  Height="18" MinWidth="150" />
                </WrapPanel>

                <Button x:Name="button_Login" Content="Влез" HorizontalAlignment="Center" MinWidth="70" Margin="5" Click="button_Login_Click"/>

            </StackPanel>
        </GroupBox>

    </Grid>
