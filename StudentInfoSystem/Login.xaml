        <Label x:Name="label_Username" Content="Потребителско име:" HorizontalAlignment="Left" Margin="27,34,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Password" Content="Парола:" HorizontalAlignment="Left" Margin="27,65,0,0" VerticalAlignment="Top"/>
